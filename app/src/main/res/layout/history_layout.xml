<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/patient_history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:text="Patient Name"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/textView7"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="First Name" />

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_column="1"
                    android:id="@+id/patient_history_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NameValue" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/textView8"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:text="Last Name" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/patient_history_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lastNameValue" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/patient_history_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="idValue" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dobValue"
                    android:paddingBottom="10dp"/>
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                />
        </TableLayout>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/patient_history_appointment_title"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="[Patient Name]'s \n Previous Appointments"
            android:padding="10dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/patient_history_rv"
            android:padding="20dp"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>