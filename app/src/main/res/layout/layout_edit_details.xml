<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_details_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="10dp"
            >

            <TextView
                android:id="@+id/edit_details_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="true"
                android:text="Edit details"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                />

        </android.support.v7.widget.CardView>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            android:layout_margin="10dp"
            android:stretchColumns="1"
            >

            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:text="First Name"
                    />

                <EditText
                    android:id="@+id/edit_details_first_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/secondRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Last Name"
                    />

                <EditText
                    android:id="@+id/edit_details_last_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/thirdRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_margin="5dp"
                    android:text="D.O.B"
                    />

                <EditText
                    android:id="@+id/edit_details_dob_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:inputType="date"
                    />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        >

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/edit_details_save_btn"
            android:background="@drawable/rounded_button"
            android:text="Save"
            android:layout_marginRight="10dp"
            />

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/edit_details_cancel_btn"
            android:background="@drawable/rounded_button"
            android:text="Cancel"
            android:layout_marginLeft="10dp"

            />
    </LinearLayout>
</LinearLayout>